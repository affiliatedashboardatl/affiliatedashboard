<% flash.each do |type, message| %>

		<% if type == 'success' %>
			<div class="alert alert-success alert-dismissible" style="margin: 15px 15px 0px 15px">
	            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	            <h4><i class="icon fa fa-check"></i> Success</h4>
	            <%= message %>
	        </div>
		<% elsif type == 'error' %>
			<div class="alert alert-danger alert-dismissible" style="margin: 15px 15px 0px 15px">
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		        <h4><i class="icon fa fa-ban"></i> Error</h4>
		        <%= message %>
		    </div>
		<% elsif type == 'alert' %>
			<div class="alert alert-warning alert-dismissible" style="margin: 15px 15px 0px 15px">
	            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	            <h4><i class="icon fa fa-warning"></i> Warning</h4>
	            <%= message %>
	        </div>
		<% elsif type == 'notice' %>
			<div class="alert alert-info alert-dismissible" style="margin: 15px 15px 0px 15px">
	            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	            <h4><i class="icon fa fa-info"></i> Info</h4>
	            <%= message %>
	        </div>
		<% end %>

<% end %>